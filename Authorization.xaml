        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="70" Margin="250,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="36"/>
        <TextBox HorizontalAlignment="Left" Height="70" Margin="250,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="36"/>

    </Grid>
</Page>
